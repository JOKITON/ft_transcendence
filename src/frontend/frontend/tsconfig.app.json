{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"],
      "models/*": ["src/models/*"],
      "pong/*": ["src/services/pong/*"],
      "pong-utils/*": ["src/services/pong/Objects/Utils/*"],
      "pong-objects/*": ["src/services/pong/Objects/*"]
    }
  }
}